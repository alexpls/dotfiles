// https://zed.dev/docs/key-bindings
[
  {
    "context": "Editor",
    "bindings": {
      "cmd-shift-c": "workspace::CopyRelativePath",
    },
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !menu",
    "bindings": {
      "ctrl-l": ["workspace::SendKeystrokes", ": n o h l enter"],
      "space g b": "editor::OpenPermalinkToLine",
      "space g y": "editor::CopyPermalinkToLine",
      "space t t": ["task::Spawn", { "task_name": "run test" }],
      "space t r": "task::Rerun",
    },
  },
]
